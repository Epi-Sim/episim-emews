{
    "postprocessing": {
        "input_fname":  "observables.nc",
        "output_fname": "obs_agg.nc",
        "remove_input": true,
        "steps": [
            {
                "function": "aggregate_simulation",
                "mapping_fname": "metapop_mapping.json"  
            }
        ]
    },
    "evaluation": {
		"function": "fit_epicurves",
		"input_fname": "obs_agg.nc",
		"parameters":{
			"obsdata_fname": "real_observables.nc",
			"epi_variable":  "new_deaths",
			"agg_level" : "level_2",
            "metric": "rmse",
            "smooth_obs": true,
            "scale_by_pop": true,
            "agg_func": "sum",
            "weight_by_population": false,
            "scale_factor": 1e5
		}
    }
}
